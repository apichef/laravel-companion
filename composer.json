{
    "name": "sarala-io/laravel-companion",
    "type": "library",
    "description": "Laravel support library for JSON-API developers.",
    "keywords": [
        "Laravel",
        "Eloquent",
        "JSON API",
        "RESTful"
    ],
    "homepage": "https://github.com/sarala-io/laravel-companion",
    "license": "MIT",
    "authors": [
        {
            "name": "Milroy Fraser",
            "email": "milroy.me@gmail.com",
            "homepage": "https://milroy.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "illuminate/database": "^5.7",
        "illuminate/http": "^5.7",
        "illuminate/support": "^5.7",
        "league/fractal": "^0.17.0"
    },
    "require-dev": {
        "orchestra/testbench": "^3.7",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Sarala\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sarala\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sarala\\JsonApiServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
