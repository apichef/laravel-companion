{
    "name": "milroyfraser/laravel-json-api-companion",
    "type": "library",
    "description": "Laravel support library for JSON-API developers.",
    "keywords": [
        "MilroyFraser",
        "JsonApiCompanion"
    ],
    "homepage": "https://github.com/milroyfraser/laravel-json-api-companion",
    "license": "MIT",
    "authors": [
        {
            "name": "Milroy Fraser",
            "email": "milroy.me@gmail.com",
            "homepage": "https://milroy.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "illuminate/database": "^5.6",
        "illuminate/foundation": "^1.1",
        "illuminate/http": "^5.6",
        "illuminate/support": "^5.6",
        "league/fractal": "^0.17.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "MilroyFraser\\JsonApiCompanion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MilroyFraser\\JsonApiCompanion\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
